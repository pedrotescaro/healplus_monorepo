<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_relatorio_antigo"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textColor="?attr/colorOnSurface" />
            <EditText
                android:id="@+id/et_report1"
                style="@style/Heal.Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_markdown_conteudo" />
            <EditText
                android:id="@+id/et_report1_date"
                style="@style/Heal.Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_data_relatorio_1" />
            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#DDDDDD" />
            <Button
                android:id="@+id/btn_pick_img1"
                style="@style/Heal.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_select_image_1" />

            <View android:layout_width="match_parent" android:layout_height="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_relatorio_recente"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textColor="?attr/colorOnSurface" />
            <EditText
                android:id="@+id/et_report2"
                style="@style/Heal.Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_markdown_conteudo" />
            <EditText
                android:id="@+id/et_report2_date"
                style="@style/Heal.Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_data_relatorio_2" />
            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#DDDDDD" />
            <Button
                android:id="@+id/btn_pick_img2"
                style="@style/Heal.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_select_image_2" />

            <View android:layout_width="match_parent" android:layout_height="16dp" />

            <Button
                android:id="@+id/btn_compare"
                style="@style/Heal.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_compare" />

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="@string/label_result_placeholder" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</ScrollView>
